
<%= form_tag shifts_sign_up_path(@doctor, @chosen), :id => 'vacant_shifts_form', :class => "form-horizontal" do %>
  <fieldset>
    <legend>Vacant Shifts</legend>
  <table cellspacing="10" class="table table-striped table-hover ">
    <tbody>
      <% @vacant_shifts.each do |shift| %>
      <tr>
        <td><%= check_box_tag 'chosen[]', shift.id, false, class: 'chosen'%></td>
        <td><%= shift.to_s %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-group">
    <div class="col-lg-10">
      <%= submit_tag "Sign Up for Shifts", :class => "btn btn-primary" %>
    </div>
  </div>
</fieldset>
<% end%>

<%= link_to 'Back', dashboard_index_path, :class => 'btn btn-link'  %>