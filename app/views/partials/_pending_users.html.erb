<h1>Users Awaiting Approval</h1>

<table cellspacing="30" class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="12"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Phone 3</th>
      <th></th>
      <th></th>
      <th></th>
    <% @users_awaiting_approver.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_1 %></td>
        <td><%= user.phone_2 %></td>
        <td><%= user.phone_3 %></td>
        <td><%= link_to 'Approve Doctor', approve_doctor_path(user), {:class => 'btn btn-link', :method => :post} %></td>
        <td><%= link_to 'Approve Admin', approve_new_admin_path(user), {:class => 'btn btn-link', :method => :post}  %></td>
        <td><%= link_to 'Approve Admin Assistant', approve_new_admin_assist_path(user), {:class => 'btn btn-link', :method => :post} %></td>
      </tr>
    <% end %>
  </tbody>
</table>