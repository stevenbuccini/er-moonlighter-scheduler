
<div class="col-lg-10">
<h1>Currently Open Pay Periods</h1>
<%= form_tag send_email_path :class => "form-horizontal" do %>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Range</th>
      <th>Open</th>
      <th>Registration Phase</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_periods.each do |pay_period| %>
      <tr>
        <td><%= pay_period.to_s %></td>
        <td><%= pay_period.is_open? ? "Yes" : "No" %></td>
        <td><%= pay_period.phase == "1" ? "ONE" : "TWO" %></td>
        <td><%= link_to 'Edit', edit_pay_period_path(pay_period) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= link_to 'Open Next Pay Period', new_pay_period_path, class:"btn btn-link" %>
</div>
