<p id="notice"><%= notice %></p>

<h1>Listing Pay Periods</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_periods.each do |pay_period| %>
      <tr>
        <td><%= pay_period.start_date %></td>
        <td><%= pay_period.end_date %></td>
        <td><%= link_to 'Show', pay_period %></td>
        <td><%= link_to 'Edit', edit_pay_period_path(pay_period) %></td>
        <td><%= link_to 'Destroy', pay_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

