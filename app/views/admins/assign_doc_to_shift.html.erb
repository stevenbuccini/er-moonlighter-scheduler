<%= form_tag sign_up_for_shifts_path(@id), :id => 'vacant_shifts_form', :class => "form-horizontal" do %>
  <fieldset>
    <legend>Unassigned Shifts</legend>
  
      <% @shifts.each do |shift| %>
        <% if shift.candidates != nil %>
          <%= shift.to_s %>
          <table cellspacing="10" class="table table-striped table-hover ">
            <tbody>
            <tr>
              <% shift.candidates.each do |candidate| %>
                <td><%= check_box_tag 'chosen[]', candidate, false, class: 'chosen'%></td>
              <% end %>
          
            </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>


  <div class="form-group">
    <div class="col-lg-10">
      <%= submit_tag "Assign Shifts", :class => "btn btn-primary" %>
    </div>
  </div>
</fieldset>
<% end %>
