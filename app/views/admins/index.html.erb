<p id="notice"><%= notice %></p>

<iframe src=<%= ENV["CALENDAR_URL"] %> style=" border-width:0 " width="800" height="600" frameborder="0" scrolling="no"></iframe>

<h1>All Doctors</h1>

<table cellspacing="30">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Phone 3</th>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_1 %></td>
        <td><%= doctor.phone_2 %></td>
        <td><%= doctor.phone_3 %></td>
        <td><%= link_to 'Show', doctor, :id => "show_doctor_"+doctor.id.to_s %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), :id => "edit_doctor_"+doctor.id.to_s %></td>
        <td><%= link_to 'Delete '+doctor.first_name, doctor, :id => "delete_doctor_"+doctor.id.to_s, method: :delete, data: { confirm: 'Are you sure you want to PERMANENTELY delete '+doctor.first_name+' '+doctor.last_name+'? (This action cannot be undone).' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

