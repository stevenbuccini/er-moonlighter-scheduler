<p id="notice"><%= notice %></p>

<h1>All Doctors</h1>

<%= form_tag send_selected_email_path do %>
<table cellspacing="30">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Phone 3</th> 
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= check_box_tag 'activated[]', doctor.id -%></td>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone_1 %></td>
        <td><%= doctor.phone_2 %></td>
        <td><%= doctor.phone_3 %></td>
        <td><%= link_to 'Show', doctor, :id => "show_doctor_"+doctor.id.to_s %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), :id => "edit_doctor_"+doctor.id.to_s %></td>
        <td><%= link_to 'Destroy', doctor, :id => "delete_doctor_"+doctor.id.to_s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

